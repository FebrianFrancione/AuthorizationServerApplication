<h6>Dashboard</h6>
<h3>Welcome {{name}}!</h3>
<p>This is your dashboard.</p>
<p>{{body}}</p>
<div class="main-content">
    <article class="widget">
        <form class="weatherLocation"><input placeholder="location..." type = "text"/><button>Search</button>
        </form>
        <div class="weatherIcon"><i class="wi wi-day-fog"></i></div>
        <div class="weatherInfo">
            <div class="temperature"><span></span></div>
            <div class="description">
                <div class="weatherCondition"></div>
                <div class="place"></div>
            </div>
        </div>
        <div class="date"></div>
    </article>
</div>
<script src="js/app.js"></script>
{{#if stories}}
    <table class="striped">
        <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{#each stories}}
            <tr>
                <td><a href="/stories/{{id}}">{{title}}</a></td>
                <td>{{ formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td>
                    <a href="/stories/edit/{{_id}}" class="btn btn-float">
                        <i class="fas fa-edit"></i>
                    </a>

                    <form action="/stories/{{_id}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn red">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any stories</p>
{{/if}}